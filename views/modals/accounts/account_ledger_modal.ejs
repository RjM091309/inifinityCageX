<!-- MODAL: Account Ledger -->
<div class="modal fade" id="modal-account-ledger" tabindex="-1" aria-labelledby="modal-account-ledgerLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl">
       <div class="modal-content">
         
         <!-- Modal Header -->
         <div class="modal-header bg-primary">
          <h5 class="modal-title text-white" id="modal-account-ledgerLabel">
            Records | <span id="agency_name_modal"></span>
          </h5>
          
           <div class="d-flex align-items-center ms-auto gap-2">
             <button class="btn btn-primary-subtle" onclick="addAgent()">
               <i class="fa fa-plus"></i> New Guest
             </button>
             
           </div>
         </div>
         
         <!-- Modal Body -->
         <div class="modal-body">
           
           <!-- Dito natin ilalagay ang table at ibang elemento -->
           
           <!-- Kung kailangan mo pa rin ng permissions -->
           <div id="user-role" data-permissions="<%= permissions %>"></div>
           
           <table id="modal-account-tbl" class="table table-bordered table-responsive">
             <thead>
               <tr>
                 <th>NAME</th>
                 <th>ACCOUNT #</th>
             
                 <th>TELEGRAM CHAT ID</th>
                 <th>CONTACT #</th>
                 <th>REMARKS</th>
                 <th>TOTAL BALANCE</th>
                 <th>ACTION</th>
               </tr>
             </thead>
             <tfoot>
              <tr>
                <th colspan="5">SUB TOTAL</th>
                <th colspan="1" id="SUB_TOTAL_SUM_VALUE">0.00</th>
                <th colspan="1"></th>
              </tr>
               <tr>
                 <th colspan="5">GRAND TOTAL</th>
                 <th colspan="1" id="TOTAL_SUM_VALUE">0.00</th>
                 <th colspan="1"></th>
               </tr>
             </tfoot>
           </table>
         </div>
         <div class="modal-footer">
				
					<button type="button" class="btn btn-sm btn-alt-secondary" data-bs-dismiss="modal">Close</button>
				</div>
       </div>
     </div>
   </div>
   
