<!-- Transaction History Modal -->
<div class="modal fade" id="modal-transaction-history" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
  <div class="modal-dialog modal-xl modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-primary">
        <h5 class="modal-title text-white">
          <i class="fa fa-history me-2"></i>Transaction History
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="table-responsive">
          <table class="table  nowrap small-text" style="width:100%" id="history-tbl">
            <thead class="table-light">
              <tr>
                <th style="width: 160px;">Date</th>
                <th style="width: 180px;">Account</th>
                <th style="width: 120px;">Transaction</th>
                <th class="text-end" style="width: 120px;">Amount</th>
                <th class="text-end" style="width: 140px;">Balance Before</th>
                <th class="text-end" style="width: 140px;">Balance After</th>
                <th style="width: 160px;">Processed By</th>
                <th>Remarks</th>
              </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
(function() {
    let historyModal = null;
    let historyDataTable = null;

    const formatDate = (val) => {
        if (!val) return '';
        if (typeof moment !== 'undefined') {
            const m = moment(val);
            if (m.isValid()) return m.format('MMM D, HH:mm');
        }
        const d = new Date(val);
        return isNaN(d.getTime())
            ? ''
            : d.toLocaleString('en-US', { month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit', hour12: false });
    };

    const formatAmount = (val) => Number(val || 0).toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 });

    async function loadHistoryRows() {
        try {
            const res = await fetch('/account_transaction_history');
            const rows = await res.json();

            if (historyDataTable) {
                historyDataTable.clear().rows.add(rows || []).draw();
                return;
            }

            historyDataTable = $('#history-tbl').DataTable({
                data: rows || [],
                order: [[0, 'desc']],
                pageLength: 10,
                columns: [
                    {
                        data: 'encoded_dt',
                        render: function (data, type) {
                            if (type === 'sort' || type === 'type') {
                                const t = Date.parse(data);
                                return isNaN(t) ? 0 : t;
                            }
                            return formatDate(data);
                        }
                    },
                    {
                        data: null,
                        render: function (_data, _type, row) {
                            const name = row.agent_name || 'N/A';
                            const code = row.agent_code || 'N/A';
                            return `${name} (${code})`;
                        }
                    },
                    {
                        data: null,
                        render: function (_data, _type, row) {
                            return row.direction || '';
                        }
                    },
                    {
                        data: 'amount',
                        className: 'text-end',
                        render: function (data) { return formatAmount(data); }
                    },
                    {
                        data: 'balance_before',
                        className: 'text-end',
                        render: function (data) { return data === null || data === undefined ? '' : formatAmount(data); }
                    },
                    {
                        data: 'balance_after',
                        className: 'text-end',
                        render: function (data) { return data === null || data === undefined ? '' : formatAmount(data); }
                    },
                    {
                        data: 'processed_by',
                        render: function (data) { return data || ''; }
                    },
                    {
                        data: 'remarks',
                        render: function (data) { return data || ''; }
                    }
                ]
            });
        } catch (err) {
            console.error('Error loading transaction history', err);
            if (historyDataTable) {
                historyDataTable.clear().draw();
            }
        }
    }

    function getHistoryModal() {
        if (!historyModal) {
            const modalElement = document.getElementById('modal-transaction-history');
            if (modalElement && typeof bootstrap !== 'undefined') {
                historyModal = new bootstrap.Modal(modalElement);
            } else {
                console.error('Modal element #modal-transaction-history not found or Bootstrap not loaded');
                return null;
            }
        }
        return historyModal;
    }

    function initTransactionHistory() {
        if (typeof $ === 'undefined' || typeof bootstrap === 'undefined') {
            setTimeout(initTransactionHistory, 100);
            return;
        }

        $(document).ready(function() {
            // Handle button click for guest account dashboard
            $(document).on('click', '#btn-transaction-history-guest', async function(e) {
                e.preventDefault();
                const modal = getHistoryModal();
                if (modal) {
                    await loadHistoryRows();
                    modal.show();
                } else {
                    console.error('Transaction history modal not initialized');
                }
            });

            // Handle button click for agent page
            $(document).on('click', '#btn-transaction-history', async function(e) {
                e.preventDefault();
                const modal = getHistoryModal();
                if (modal) {
                    await loadHistoryRows();
                    modal.show();
                } else {
                    console.error('Transaction history modal not initialized');
                }
            });
        });
    }

    // Start initialization
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initTransactionHistory);
    } else {
        initTransactionHistory();
    }
})();
</script>
