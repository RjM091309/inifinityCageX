  <!-- Zoom Script -->
  <script>
    const accountPhotoAlt = document.getElementById('account_photo_alt');
    const zoomedImageAlt = document.getElementById('zoomed-image-alt');
  
    accountPhotoAlt.addEventListener('mouseover', () => {
      zoomedImageAlt.src = accountPhotoAlt.src;
      zoomedImageAlt.classList.add('show');
    });
  
    accountPhotoAlt.addEventListener('mouseout', () => {
      zoomedImageAlt.classList.remove('show');
    });
  </script>
  
