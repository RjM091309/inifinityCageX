<div class="modal fade" id="modal-services" tabindex="-1" aria-labelledby="modal-services-label" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-primary">
        <h5 class="modal-title text-white" id="modal-services-label">Services</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" id="services-game-id-input" />
        <input type="hidden" id="services-guest-name-input" />
        <input type="hidden" id="services-edit-id-input" />
        <div id="services-add-wrap" class="mt-4">
        <div class="row g-3">
          <div class="col-md-6">
            <div class="fw-semibold text-muted">Service Type</div>
            <select id="services-type" class="form-select">
              <option value="" selected disabled>Select service</option>
              <option value="fnb">F &amp; B</option>
              <option value="hotel">Hotel</option>
            </select>
          </div>
          <div class="col-md-6">
            <div class="fw-semibold text-muted">Amount</div>
            <input type="text" id="services-amount" class="form-control" data-type="number" placeholder="Enter amount" />
          </div>
        </div>
        <div class="mt-3 mb-1 fw-semibold text-muted">Remarks</div>
        <textarea id="services-remarks" class="form-control" rows="2" placeholder="Optional remarks"></textarea>
</div>
       
          <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="fw-semibold text-muted">Services Availed</div>
            <div class="fw-semibold text-muted">Total: <span id="services-total" class="text-primary">0</span></div>
          </div>
          <div class="custom-datatable-entries">
            <div class="table-responsive">
              <table id="services-list-tbl" class="table table-bordered table-vcenter js-dataTable-responsive" style="font-size: 11px !important;">
                <thead>
                  <tr>
                    <th scope="col">Service</th>
                    <th scope="col" class="text-end">Amount</th>
                    <th scope="col">Remarks</th>
                    <th scope="col">Processed By</th>
                    <th scope="col">Date</th>
                    <th scope="col" class="text-center">Action</th>
                  </tr>
                </thead>
                <tbody id="services-list-body">
                  <tr class="text-muted">
                    <td colspan="6" class="text-center small">No services availed.</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
      </div>
      <div class="modal-footer">
        <button type="submit" id="services-save-btn" class="btn btn-sm btn-primary" >
          Save
        </button>
        <button type="button" class="btn btn-sm btn-alt-secondary" data-bs-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Edit Service Modal -->
<div class="modal fade" id="modal-services-edit" tabindex="-1" aria-labelledby="modal-services-edit-label" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-primary">
        <h5 class="modal-title text-white" id="modal-services-edit-label">Edit Service</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" id="services-edit-id" />
        <div class="row g-3">
          <div class="col-md-6">
            <div class="fw-semibold text-muted">Service Type</div>
            <select id="services-edit-type" class="form-select">
              <option value="" selected disabled>Select service</option>
              <option value="fnb">F &amp; B</option>
              <option value="hotel">Hotel</option>
            </select>
          </div>
          <div class="col-md-6">
            <div class="fw-semibold text-muted">Amount</div>
            <input type="text" id="services-edit-amount" class="form-control" data-type="number" placeholder="Enter amount" />
          </div>
        </div>
        <div class="mt-3 mb-1 fw-semibold text-muted">Remarks</div>
        <textarea id="services-edit-remarks" class="form-control" rows="2" placeholder="Optional remarks"></textarea>
      </div>
      <div class="modal-footer">
        <button type="button" id="services-edit-save-btn" class="btn btn-sm btn-primary">
          Save
        </button>
        <button type="button" class="btn btn-sm btn-alt-secondary" data-bs-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>

