<div class="modal fade" id="modal-change_status" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLiveLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
		<div class="modal-header bg-primary">
			<h5 class="modal-title text-white" id="staticBackdropLiveLabel"><%= __('modal_change_status.change_status') %></h5>
			<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
		</div>
		<form id="edit_status">
		<div class="modal-body">
			<input type="hidden" name="txtGameId" class="txtGameId" >
			<input type="hidden" name="txtAccountCode" class="txtAccountCode" >
			<input type="hidden" name="txtCapital" class="txtCapital">
			<input type="hidden" name="txtFinalChips" class="txtFinalChips">
			<input type="hidden" name="txtTotalRolling" class="txtTotalRolling">
			<input type="hidden" name="txtWinloss" class="txtWinloss">
			<div class="row mb-2">
				<div class="col-sm-12">
					<select class=" form-select" name="txtStatus" style="width: 100%;" data-placeholder="Choose a status..."
						id="status">
						<option selected disabled><%= __('modal_change_status.select_status_placeholder') %></option>
						<option value="2"><%= __('modal_change_status.on_game_option') %></option>
						<!-- <option value="3">FINISH</option> -->
						<option value="1"><%= __('modal_change_status.end_game_option') %></option>
					</select>
				</div>
			</div>
			
			<!-- Roller Chips Return Section (Only shown if END GAME and has roller chips) -->
			<div id="roller-chips-return-section" style="display: none; margin-top: 20px; padding-top: 20px; border-top: 1px solid #dee2e6;">
				<div class="alert alert-info" role="alert" style="padding: 10px; margin-bottom: 15px;">
					<small>
						<strong>Roller Chips Return Required:</strong><br>
						Total ADD (NN): <span id="required-return-total-add-nn">0</span> | 
						Total ADD (CC): <span id="required-return-total-add-cc">0</span><br>
						Total RETURN (NN): <span id="required-return-total-return-nn">0</span> | 
						Total RETURN (CC): <span id="required-return-total-return-cc">0</span><br>
						<strong>Required RETURN (NN): <span id="required-return-nn">0</span></strong><br>
						<strong>Required RETURN (CC): <span id="required-return-cc">0</span></strong>
					</small>
				</div>
				<div class="row mb-2">
					<div class="col-sm-6">
						<label class="form-label">Return NN Chips <span class="text-danger">*</span></label>
						<input type="text" onkeypress="return onlyNumberKey(event)" data-type="number" 
							class="form-control text-center txtReturnRollerNN" 
							placeholder="NN Chips" name="txtReturnRollerNN" id="txtReturnRollerNN">
						<small class="text-muted">Required: <span id="required-nn-display">0</span></small>
					</div>
					<div class="col-sm-6">
						<label class="form-label">Return CC Chips <span class="text-danger">*</span></label>
						<input type="text" onkeypress="return onlyNumberKey(event)" data-type="number" 
							class="form-control text-center txtReturnRollerCC" 
							placeholder="CC Chips" name="txtReturnRollerCC" id="txtReturnRollerCC">
						<small class="text-muted">Required: <span id="required-cc-display">0</span></small>
					</div>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<button type="submit" class="btn btn-sm btn-primary" id="submit-status-btn">
				<%= __('modal_change_status.save') %>
			</button>
			
			
			<button type="button" class="btn btn-sm btn-alt-secondary" data-bs-dismiss="modal">
				<%= __('modal_change_status.close') %>
			</button>
		</div>
		</div>
	</div>
	</form>
	</div>