/* Header styles */
#agent-tbl thead th {
    background: var(--bs-primary-bg-subtle);
    color: var(--bs-primary);
    font-weight: 500;
    padding: 12px 15px;
    text-align: left;
    border: none;
}

/* Row styles */
#agent-tbl tbody tr {
    border-bottom: 1px solid #eee;
}

/* Cell styles */
    #agent-tbl td {
    padding: 12px 15px;
    color: #666;
}

#agent-tbl tbody tr:hover {
  background-color: #f5f5f5 !important;
}



