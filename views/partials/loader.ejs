<style>
  /* Loader CSS */
  #loader-container {
    position: fixed;
    top: 0; 
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 9999; /* Para matakpan lahat */
    transition: opacity 0.8s ease;
  }

  #loader-container .nav {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
    background-color: #0b0b0b;
    text-align: center;
    padding: 0 2em;
    position: relative;
    z-index: 2;
  }

  #loader-container .loader-logo {
    width: min(70vw, 520px);
    height: auto;
    object-fit: contain;
    z-index: 4;
  }

  @keyframes loading {
  to {
    text-shadow: 20px 0 70px var(--bs-primary);
    color: var(--bs-primary);
  }
}

@-webkit-keyframes loading {
  to {
    text-shadow: 20px 0 70px var(--bs-primary);
    color: var(--bs-primary);
  }
}


  #loader-container .loader-logo {
    animation: logoPulse 1.6s ease-in-out infinite alternate;
  }

  @keyframes logoPulse {
    to {
      filter: drop-shadow(0 0 24px rgba(0, 0, 0, 0.35));
      transform: scale(1.02);
    }
  }
</style>

<div id="loader-container">
  <section class="nav">
    <img src="/assets/images/infinityLOGO.png" alt="Cage-X Infinity" class="loader-logo">
  </section>
</div>

<script>
  // Loader fade-out effect
  window.addEventListener('load', function() {
    setTimeout(function(){
      var loader = document.getElementById('loader-container');
      loader.style.opacity = '0';
      setTimeout(function(){
        loader.style.display = 'none';
      }, 800); // fade-out duration
    }, 500); // delay for loader animation
  });
</script>
